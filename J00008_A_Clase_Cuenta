//1) Crea una clase llamada Cuenta que tendrá los siguientes atributos: titular y cantidad (puede tener decimales).
//El titular será obligatorio y la cantidad es opcional. Crea dos constructores que cumplan lo anterior.
//Crea sus métodos get, set y toString.
//Tendrá dos métodos especiales:
//ingresar(double cantidad): se ingresa una cantidad a la cuenta, si la cantidad introducida es negativa, no se hará nada.
//retirar(double cantidad): se retira una cantidad a la cuenta, si restando la cantidad actual a la que nos pasan es negativa,
//la cantidad de la cuenta pasa a ser 0.

package ejercicio1;

public class Cuenta {
	
	//ATRIBUTOS
	private String titular;
	private double cantidad;
	
	//CONSTRUCTORES -> cuando se cree un objeto Cuenta se ejecutará el código que incluyamos en el constructor
	//CONSTRUCTOR PARA CUANDO NO SE USE EL ATRIBUTO OPTATIVO CANTIDAD
	public Cuenta(String titular) {
		this.titular = titular;
	}
	
	public Cuenta(String titular, double cantidad) {
		this.titular = titular;
		if (cantidad < 0 ) {
			this.cantidad = 0;
		} else {
			this.cantidad = cantidad;
		}
	}

	//GETTERS Y SETTERS
	public String getTitular() {
		return titular;
	}

	public void setTitular(String titular) {
		this.titular = titular;
	}

	public double getCantidad() {
		return cantidad;
	}

	public void setCantidad(double cantidad) {
		this.cantidad = cantidad;
	}
	
	//METODO ESPECIAL -> ingresar(double cantidad) -> no necesito que devuelva nada -> void
	public void ingresar(double ingreso) {
		if (ingreso < 0) {
			System.out.println("error, la cantidad a ingresar no puede ser negativa");
		} else {
			cantidad = cantidad + ingreso;
		}
	}
	
	//METODO ESPECIAL -> retirar(double cantidad) -> no necesito que devuelva nada -> void
	public void retirar(double retirada) {
		if (retirada < 0) {
			System.out.println("Error, la cantidad a retirar NO puede ser negativa.");
		} else {
			if (cantidad - retirada < 0 ) {
			cantidad = 0;
			} else {
			cantidad = cantidad - retirada;
			}
		}
	}

	//TO STRING
	@Override
	public String toString() {
		return "El titular " + titular + " tiene " + cantidad + " euros en la cuenta.";
	}
}
